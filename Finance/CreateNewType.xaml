<Window x:Class="Finance.CreateNewType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finance"
        mc:Ignorable="d"
        Title="createNewType" Height="100" Width="300">
    <Border CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBox x:Name="TextBoxAddCombo"
                     Grid.Row="0"
                     Margin="5"/>

            <Button x:Name="ComboItemAddBtn"
                    Grid.Row="1"
                    Margin="5,2,5,5"
                    Content="Добавить тип" Click="ComboItemAddBtn_Click"/>
        </Grid>
    </Border>
</Window>
